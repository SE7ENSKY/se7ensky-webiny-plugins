{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "version": "independent",
  "command": {
    "version": {
      "preid": "next",
      "ignoreChanges": [
        "scripts/**",
        ",**/__fixtures__/**",
        "**/__tests__/**",
        "**/*.md",
        "lerna.json",
        "examples/**"
      ],
      "allowBranch": ["master"],
      "conventionalCommits": true,
      "createRelease": "github",
      "commitHooks": false,
      "message": "chore(release): New release %v :tada: :rocket:",
      "excludeDependents": true
    },
    "publish": {
      "conventionalCommits": true,
      "contents": "dist"
    }
  }
}
