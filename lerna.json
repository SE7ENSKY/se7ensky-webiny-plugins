{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*", "components/*"],
  "version": "2",
  "command": {
    "version": {
      "preid": "next",
      "ignoreChanges": [
        "scripts/**",
        ",**/__fixtures__/**",
        "**/__tests__/**",
        "**/*.md",
        "lerna.json",
        "examples/**"
      ],
      "allowBranch": ["master"],
      "conventionalCommits": true,
      "changelogPreset": "@portal/frontend",
      "createRelease": "github",
      "commitHooks": false,
      "message": "chore(release): New release :tada: :rocket:",
      "excludeDependents": true
    },
    "publish": {
      "conventionalCommits": true,
      "contents": "dist"
    }
  }
}
